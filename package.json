{
  "name": "structured-dialogue-tools",
  "version": "1.0.0",
  "description": "AIとの構造的対話ログを自動分割・命名・書式統一するツール群",
  "main": "src/web/structured-dialogue-app.ts",
  "type": "module",
  "scripts": {
    "start": "tsx src/web/structured-dialogue-app.ts",
    "dev": "tsx --watch src/web/structured-dialogue-app.ts",
    "test:split": "cd tests && tsx test-splitter.ts",
    "test:multiple": "cd tests && tsx test-multiple-logs.ts",
    "test:naming": "tsx src/core/naming-helper.ts",
    "test:format": "tsx src/core/log-format-unifier.ts",
    "analyze:logs": "tsx src/core/log-pattern-analyzer.ts",
    "analyze:concepts": "tsx src/tools/concept-analyzer.ts",
    "experiment:ai": "tsx src/experiments/ai-experiment.ts",
    "demo:comparison": "tsx src/experiments/demo-comparison.ts",
    "build": "tsc",
    "test": "npm run test:multiple"
  },
  "keywords": [
    "structured-dialogue",
    "ai-chat",
    "log-processing",
    "automation",
    "typescript"
  ],
  "author": "dvcampanula",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^5.0.3",
    "@types/kuromoji": "^0.1.3",
    "@types/node": "^24.0.4",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "kuromoji": "^0.1.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19"
  }
}
